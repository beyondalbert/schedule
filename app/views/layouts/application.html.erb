<!DOCTYPE html>
<html>
<head>
  <title>Schedule</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="flash-msg row" style="margin-left: 0px;margin-right: 0px;">
      <div class="alert alert-dismissible col-md-offset-4 col-md-4 col-xs-12" role="alert" style="display: none;">
        <button class="close" type="button" data-dismiss="alert">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">关闭</span>
        </button>
      </div>
    </div>

  <nav id="navbar-white" class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="navbar-header">
      <button href="#menu-toggle" class="slidebar-toggle" id="menu-toggle">
        <span class="sr-only">Toggle sidebar</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <span class="text-right"><a class="navbar-brand" href="/">Schedule</a></span>
    </div>
  </nav>

  <div id="wrapper">
    <%= render partial: "layouts/side_bar" %> 
    <!-- Page Content -->
    <main id="page-wrapper6">
      <div class="container-fluid">  
      	<%= yield %>
      </div> 
    </main>
  </div><!-- /#wrapper -->

  <script type='text/javascript'>
      <% if flash.first %>
        var flashType = "<%= flash.first[0] %>";
        var flashContent = "<%= flash.first[1] %>"
        var type = '';
        switch(flashType) {
          case 'alert':
            type = 'alert-danger';
            break;
          case 'success':
            type = 'alert-success';
            break;
          default:
            type = 'alert-danger';
        }
        show_flash_msg(flashContent, type);
      <% end %>
    </script>
</body>
</html>
